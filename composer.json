{
  "name": "sendernet/sender-transactional-php",
  "description": "Sendernet transactional email php API client",
  "type": "library",
  "license": "MIT",
  "homepage": "https://sender.net",
  "keywords": [
    "sendernet",
    "email-api",
    "emails",
    "transactional"
  ],
  "authors": [
    {
      "name": "Sender Team",
      "role": "Developer"
    }
  ],
  "require": {
    "ext-json": "*",
    "php": "^8.2",
    "php-http/client-common": "^2.2",
    "php-http/discovery": "^1.9",
    "php-http/httplug": "^2.1",
    "psr/http-client-implementation": "^1.0",
    "psr/http-message": "^1.0 || ^2.0",
    "beberlei/assert": "^3.2",
    "symfony/options-resolver": "^6.0 || ^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0 || ^11.0 || ^12.0",
    "php-http/mock-client": "^1.0",
    "php-http/message": "^1.0",
    "mockery/mockery": "^1.6",
    "guzzlehttp/psr7": "^2.0",
    "http-interop/http-factory-guzzle": "^1.0",
    "php-http/guzzle7-adapter": "^1.0",
    "friendsofphp/php-cs-fixer": "^3.4",
    "orchestra/testbench": "^9.0 || ^10.0"
  },
  "suggest": {
    "illuminate/mail": "Required for Laravel integration (^10.0 || ^11.0 || ^12.0)",
    "illuminate/support": "Required for Laravel integration (^10.0 || ^11.0 || ^12.0)"
  },
  "autoload": {
    "psr-4": {
      "SenderNet\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SenderNet\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "@php vendor/bin/phpunit tests/"
    ],
    "phpcs": [
      "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix --verbose --diff"
    ]
  },
  "config": {
    "platform-check": false,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "SenderNet\\Laravel\\SenderServiceProvider"
      ]
    }
  }
}
